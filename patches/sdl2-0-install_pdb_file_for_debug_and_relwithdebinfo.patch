+++ b/CMakeLists.txt
@@ -1307,3 +1307,9 @@ else()
   install(TARGETS SDL2 RUNTIME DESTINATION bin)
 endif()
 
+if(SDL_SHARED AND (MSVC_VERSION GREATER 1500) AND (NOT CMAKE_VERSION VERSION_LESS "3.1"))
